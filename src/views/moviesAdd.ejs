<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <%- include('./partials/header') %> 
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" required></p>
            <small> <%= (locals.errors && errors.title) ? errors.title.msg : null %> </small>

            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" required> </p>
            <small> <%= (locals.errors && errors.rating) ? errors.rating.msg : null %> </small>

            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" required></p>
            <small> <%= (locals.errors && errors.awards) ? errors.awards.msg : null %> </small>

            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" required></p>
            <small> <%= (locals.errors && errors.release_date) ? errors.release_date.msg : null %> </small>

            <label for="length">Length </label>
            <p><input type="number" name="length" id="" required></p>
            <small> <%= (locals.errors && errors.length) ? errors.length.msg : null %> </small>

            <label for="genre">Genre </label>
            <p><select name="genre" id="genre">
                <option value="" selected hidden>Select a genre</option>
                <% genres.forEach(genero => { %>
                 <option value="<%= genero.id %> "><%= genero.name %> </option>
                <% }) %>
            </select></p>
            <small> <%= (locals.errors && errors.genre) ? errors.genre.msg : null %> </small>

            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>